{% assign bg-color = product.metafields.custom.order_by_background_color | default: "#DAF9EF" %}
{% assign point-color = product.metafields.duo.product_color | default: "#70E6B8" %}

<style>
    .product-form__social-proof {
        background: {{ bg-color }};
        display: flex;
        align-items: center; 
        border-radius: 10px;
        padding: 2px 10px;
        width: fit-content;
        gap: 7px;
    }

    .product-form__social-proof:before {
        content: "";
        background: {{ point-color }};
        width: 12px;
        height: 12px;
        display: inline-block;
        border-radius: 50%;
    }
</style>

<div class="product-form__social-proof">
    <span>{{ social_proof_msg }}</span>
</div>

