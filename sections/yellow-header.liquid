{%- style -%}
    #cta-header-{{ section.id }} .full_container_section p {
  background: {{ section.settings.txt | default: '#FFFFFF'}};
  text-align: center;
  padding: 1.3rem .5rem;
  color: {{ section.settings.text_color | default: '#000000'}};
  font-size: {{ section.settings.small_mobile_font_size }}px;
  font-style: initial;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: -0.015em;
  margin: 0;
  line-height: 1.2;
  height: auto;
  min-height: 60px;
  text-wrap: balance;
    }
    #cta-header-{{ section.id }} .cta-header__link {
    	text-decoration: none;
    }
    #cta-header-{{ section.id }} span.svg-ion {
  line-height: 32px;
  margin-left: 17px;
    }
    #cta-header-{{ section.id }} .cta-header__link.cta-header__link--underline{
  text-decoration: underline;
  text-decoration-color: {{ section.settings.text_color | default: '#000000'}};
  text-decoration-thickness: 0.1rem;
  text-underline-offset: 0.2rem;
    }
    #cta-header-{{ section.id }} .cta-header__link.cta-header__link--uppercase{
    	text-transform: uppercase;
    }
    @media screen and (min-width: 450px) {
  #cta-header-{{ section.id }} .full_container_section p{
  	font-size: {{ section.settings.mobile_font_size }}px;
  }
    }
    @media screen and (min-width: 768px) {
  #cta-header-{{ section.id }} .full_container_section p{
  	font-size: {{ section.settings.desktop_font_size }}px;
  }
    }
{%- endstyle -%}
<div id="cta-header-{{ section.id }}" class="page-width yellow-header">
  <div class="full_container_section">
    <a
      class="icon_redirect cta-header__link{% if section.settings.underline %} cta-header__link--underline{% endif %}{% if section.settings.uppercase %} cta-header__link--uppercase{% endif %}"
      href="{{section.settings.learnmore}}"
    >
      <p>
        {{ section.settings.title1 }}
        {%- if section.settings.arrow_icon -%}
          <span class="svg-ion">
            <svg width="7" height="14" viewBox="0 0 7 14" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7 7L0.25 13.4952L0.250001 0.504809L7 7Z" fill="black"/>
            </svg>
          </span>
        {%- endif -%}
      </p>
    </a>
  </div>
</div>

{% schema %}
{
  "name": "CTA Header",
  "settings": [
    {
      "type": "color",
      "id": "txt",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "Title"
    },
    {
      "type": "url",
      "id": "learnmore",
      "label": "Link"
    },
    {
      "type": "range",
      "id": "desktop_font_size",
      "label": "Desktop font size",
      "min": 6,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_font_size",
      "label": "Mobile font size",
      "min": 6,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "small_mobile_font_size",
      "label": "Small mobile font size",
      "min": 6,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "arrow_icon",
      "label": "Display Arrow Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "underline",
      "label": "Underline?",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "uppercase",
      "label": "Uppercase?",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "CTA Header",
      "category": "title"
    }
  ]
}
{% endschema %}
