{{ 'section-endrock-icon-with-text.css' | asset_url | stylesheet_tag }}

<style>
    #section--{{ section.id }}{
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        background: {{ section.settings.bg_color }};
    }

    @media (max-width: 767px){
        #section--{{ section.id }}{
            padding-top: {{ section.settings.mobile_padding_top }}px;
            padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
        }
    }
</style>

<div id="section--{{ section.id }}">
    <div class="endrock-icon-with-text {% if section.settings.full_width %}full-width{% else %}page-width{% endif %}">
        <div class="swiper-container endrock-icon-with-text-wrapper">
            <div class="swiper-wrapper icon-with-text__wrapper">
                {% for block in section.blocks %}
                    <div class="iwt-item swiper-slide">
                        <span class="iwt-item__heading">{{ block.settings.heading }}</span>
                        {%- if block.settings.icon != blank -%}
                            <div class="iwt-item__icon">{{ block.settings.icon }}</div>
                        {%- endif -%}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<script>
    if(window.innerWidth < 1000){
        const iconsSwiper = new Swiper('.endrock-icon-with-text .endrock-icon-with-text-wrapper', {
            direction: 'horizontal',
            slidesPerView:2,
            loop: true,
            loopedSlides: 2,
            speed: 1000,
            autoplay: {
                delay: 0,
            },
            Infinity:true,
            breakpoints: {
                // when window width is >= 320px
                767: {
                slidesPerView: 2,
                },
                // when window width is >= 480px
                1024: {
                slidesPerView: 4,
                }
            }
        });

        function handleFocus(e, i) {
            iconsSwiper.slideTo(i);
        }

        const iconsSliders = document.querySelectorAll('.endrock-icon-with-text .swiper-container .swiper-slide');
        iconsSliders.forEach((slide, i) => slide.addEventListener('focusin', (e) => handleFocus(e, i)));
    }
</script>

{% schema %}
    {
        "name": "Endrock Icon With Text",
        "class": "endrock-icon-with-text",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "label": "Padding Top",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding Bottom",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "range",
                "id": "mobile_padding_top",
                "label": "Mobile Padding Top",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "range",
                "id": "mobile_padding_bottom",
                "label": "Mobile Padding Bottom",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "checkbox",
                "id": "full_width",
                "label": "Full Width"
            }
        ],
        "blocks": [
            {
                "type": "icon",
                "name": "Icon With Text",
                "settings": [
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    },
                    {
                        "type": "html",
                        "id": "icon",
                        "label": "Icon"
                    }
                ]
            }
        ],
        "presets":[
            {
                "name":"Endrock Icon With Text"
            }
        ]
        
    }
{% endschema %}