{{ 'section-why-duo.css' | asset_url | stylesheet_tag }}

<style>
    #section--{{ section.id }}{
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    #section--{{ section.id }}{
        background-color: {{ section.settings.bg_color }};
    }

    @media (max-width: 767px){
        #section--{{ section.id }}{
            padding-top: {{ section.settings.mobile_padding_top }}px;
            padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
        }
    }
</style>

<div id="section--{{ section.id }}">
    <div class="why-duo {% if section.settings.full_width %}full-width{% else %}page-width{% endif %}">
        <div class="why-duo_wrapper">
            <div class="content-container only--mobile">
                <h2 class="left-content__heading">{{ section.settings.heading }}</h2>
                <div class="left-content__description">{{ section.settings.mobile_description }}</div>
                <div class="content-wrapper">
                    {% for block in section.blocks %}
                        <div class="property-list_wrapper">
                            <div class="property-icon">{{ block.settings.property_icon }}</div>
                            <div class="property-description {% if block.settings.property_description_margin %}enable_margin{% endif %}">{{ block.settings.property_description }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {%- if section.settings.image != blank -%}
                <div class="why-duo__media only--desktop" style="padding-bottom: {{ 100 | divided_by: section.settings.image.aspect_ratio }}%">
                    <img
                        src="{{ section.settings.image | img_url: 'master' }}"
                        alt="{{ section.settings.image.alt }}"
                        loading="lazy"
                    >
                </div>
            {%- endif -%}
            {%- if section.settings.mobile_image != blank -%}
                <div class="why-duo-mobile__media only--mobile">
                    <img
                        src="{{ section.settings.mobile_image | img_url: 'master' }}"
                        alt="{{ section.settings.mobile_image.alt }}"
                        loading="lazy"
                    >
                </div>
            {%- endif -%}
            <div>
            <div class="left-content only--desktop">
                <div class="left-content__properties-wrapper">
                    <h2 class="left-content__heading">{{ section.settings.heading }}</h2>
                    <div class="left-content__description">{{ section.settings.description }}</div>
                    <div class="left-content__properties">
                        {% for block in section.blocks %}
                            {% if block.type == 'left' %}
                                <div class="property-list_wrapper">
                                    <div class="property-icon">{{ block.settings.property_icon }}</div>
                                    <div class="property-description {% if block.settings.property_description_margin %}enable_margin{% endif %}">{{ block.settings.property_description }}</div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
              <div></div>
            <div class="right-content only--desktop">
                <div class="right-content__properties">
                    {% for block in section.blocks %}
                        {% if block.type == 'right' %}
                            <div class="property-list_wrapper">
                                <div class="property-icon">{{ block.settings.property_icon }}</div>
                                <div class="property-description {% if block.settings.property_description_margin %}enable_margin{% endif %}">{{ block.settings.property_description }}</div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Why Duo",
        "class": "section-why-duo",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "label": "Padding Top",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding Bottom",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "range",
                "id": "mobile_padding_top",
                "label": "Mobile Padding Top",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "range",
                "id": "mobile_padding_bottom",
                "label": "Mobile Padding Bottom",
                "min": 0,
                "max": 100,
                "unit": "px",
                "step": 5,
                "default": 50
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "checkbox",
                "id": "full_width",
                "label": "Full Width"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "image_picker",
                "id": "mobile_image",
                "label": "Mobile Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "richtext",
                "id": "description",
                "label": "Description"
            },
            {
                "type": "richtext",
                "id": "mobile_description",
                "label": "Mobile Description"
            }
        ],
        "blocks": [
            {
                "type": "left",
                "name": "Left Content",
                "settings": [   
                    {
                        "type": "html",
                        "id": "property_icon",
                        "label": "Property Icon"
                    },
                    {
                        "type": "richtext",
                        "id": "property_description",
                        "label": "Property Description"
                    },
                    {
                        "type": "checkbox",
                        "id": "property_description_margin",
                        "label": "Property Description Margin"
                    }
                ]
            },
            {
                "type": "right",
                "name": "Right Content",
                "settings": [   
                    {
                        "type": "html",
                        "id": "property_icon",
                        "label": "Property Icon"
                    },
                    {
                        "type": "richtext",
                        "id": "property_description",
                        "label": "Property Description"
                    },
                    {
                        "type": "checkbox",
                        "id": "property_description_margin",
                        "label": "Property Description Margin"
                    }
                ]
            }
        ],
        "presets":[
            {
                "name": "Why Duo"
            }
        ]
    }
{% endschema %}
