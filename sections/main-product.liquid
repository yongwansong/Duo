{%- if section.settings.product_color != blank -%}
  {%- style -%}
    .main-product{
		{%- assign product_color_lighter = section.settings.product_color  | color_modify: 'lightness', 90.4  -%}
		--product-color: {{ section.settings.product_color.red }}, {{ section.settings.product_color.green }}, {{ section.settings.product_color.blue }};
		--product-color-lighter: {{ product_color_lighter.red }}, {{ product_color_lighter.green }}, {{ product_color_lighter.blue }};
    }
  {%- endstyle -%}
{%- endif -%}
<section class="main-product">
  <div class="page-width">
    {% render 'breadcrumbs' %}
    <div class="product grid grid--1-col {% if product.media.size > 0 %}grid--2-col-tablet{% else %}product--no-media{% endif %}">
      <div class="grid__item product__media-wrapper product-gallery" id="product__media-{{ section.id }}">
        {% comment %} product media {% endcomment %}
        {% render 'product-medias' %}
      </div>
      <div class="product__info-wrapper grid__item">
        <div
          id="ProductInfo-{{ section.id }}"
          class="product__info-container{% if section.settings.enable_sticky_info %} product__info-container--sticky{% endif %}"
        >
          {%- assign product_form_id = 'product-form-' | append: section.id -%}

          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'text' -%}
					<p
					  class="product__text{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}"
					  {{ block.shopify_attributes }}
					>
					{{- block.settings.text -}}
					</p>
              {%- when 'title' -%}
					{%- if block.settings.icon != blank -%}
						<div class="product__title--with-icon">
					{%- endif -%}
					<h1 class="product__title" {{ block.shopify_attributes }}>
					{{ product.title | escape }}
					</h1>
					{%- if block.settings.icon != blank -%}
						<div class="product__title-icon">
							{{ block.settings.icon | image_url: width: 95 | image_tag: width: 285, widths: '95, 160, 285', sizes: '95px' }}
						</div>
						</div>
					{%- endif -%}
              {%- when 'price' -%}
                <div class="no-js-hidden" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
                  {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: true,
                    price_class: 'price--large'
                  -%}
                </div>
                {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
                  <div class="product__tax caption rte">
                    {%- if shop.taxes_included -%}
                      {{ 'products.product.include_taxes' | t }}
                    {%- endif -%}
                    {%- if shop.shipping_policy.body != blank -%}
                      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    {%- endif -%}
                  </div>
                {%- endif -%}
                <div {{ block.shopify_attributes }}>
                  {%- form 'product',
                    product,
                    id: 'product-form-installment',
                    class: 'installment caption-large'
                  -%}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {{ form | payment_terms }}
                  {%- endform -%}
                </div>
              {%- when 'social-proof-units' -%}
                {% render "social-proof-units", social_proof_msg: block.settings.social_proof_msg %}
              {%- when 'description' -%}
                {%- if product.description != blank -%}
                  <div class="product__description rte">
                    {{ product.description }}
                  </div>
                {%- endif -%}
              {%- when 'pick_function' -%}
                {%- if block.settings.label != blank or block.settings.products != blank or block.settings.details != blank -%}
                  <div class="product__pick-function__wrapper">
                    {%- if block.settings.label != blank and block.settings.products != blank -%}
                      <div class="product__pick-function">
                        <div class="product__pick-function__label">
                          {{ block.settings.label }}: <span>{{ product.title }}</span>
                        </div>
                        <ul class="product__pick-function__products" role="list">
                          {%- for p in block.settings.products -%}
                            {%- if p != blank -%}
                              <li class="product__pick-function__product{% if product == p %} product__pick-function__product--current{% endif %}">
                                <a href="{{ p.url }}">
                                  <span class="visually-hidden">{{ p.title }}</span>
                                  {%- assign p_image = p.featured_media -%}
                                  {%- if p.media[2] != null -%}
                                    {%- assign p_image = p.media[2] -%}
                                  {%- endif -%}
                                  <span class="product__pick-function__product-image">
                                    {{ p_image | image_url: width: 100 | image_tag: width: 100, widths: '100, 200, 300', sizes: '100px' }}
                                  </span>
                                </a>
                              </li>
                            {%- endif -%}
                          {%- endfor -%}
                        </ul>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.details != blank -%}
                      <div class="product__pick-function__details">
                        {%- capture list_icon -%}
                          <li>
                          <svg xmlns="http://www.w3.org/2000/svg" class="icon" aria-hidden="true" role="presentation" fill="none">
                            <use xlink:href="#icon-{{ section.id }}-{{ block.id }}"></use>
                          </svg>
                        {%- endcapture -%}
                        {{ block.settings.details | replace: '<li>', list_icon }}
                      </div>
                    {%- endif -%}
